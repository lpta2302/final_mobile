<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start|center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="80dp"
        android:text="Thay đổi mật khẩu"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Mật khẩu hiện tại -->
    <TextView
        android:id="@+id/current_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:text="Mật khẩu hiện tại"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_launcher_foreground"
        android:hint="Nhập mật khẩu của bạn"
        android:inputType="textPassword" />

    <!-- Mật khẩu mới -->

    <TextView
        android:id="@+id/new_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Mật khẩu mới"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_launcher_foreground"
        android:hint="Nhập mật khẩu của bạn"
        android:inputType="textPassword" />

    <!-- Xác nhận mật khẩu mới -->
    <TextView
        android:id="@+id/confirm_new_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Xác nhận mật khẩu mới"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_launcher_foreground"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword" />

    <!-- Nút Lưu -->
    <Button
        android:id="@+id/btn_save_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Lưu" />

</LinearLayout>